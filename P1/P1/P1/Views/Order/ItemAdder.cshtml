@model ModelsDefault.Order

@{
    ViewData["Title"] = "ItemAdder";
}

<h1>Add Items</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ItemAdder">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div hidden class="form-group">
                <label asp-for="store" class="control-label"></label>
                <input asp-for="store" class="form-control" />
                <span asp-validation-for="store" class="text-danger"></span>
            </div>
            <div hidden class="form-group">
                <label asp-for="custId" class="control-label"></label>
                <input asp-for="custId" class="form-control" />
                <span asp-validation-for="custId" class="text-danger"></span>
            </div>
            <div hidden class="form-group">
                <label asp-for="time" class="control-label"></label>
                <input asp-for="time" class="form-control" />
                <span asp-validation-for="time" class="text-danger"></span>
            </div>
            <div hidden class="form-group">
                <label asp-for="total" class="control-label"></label>
                <input asp-for="total" class="form-control" />
                <span asp-validation-for="total" class="text-danger"></span>
            </div>
            <div hidden class="form-group">
                <label asp-for="id" class="control-label"></label>
                <input asp-for="id" class="form-control" />
                <span asp-validation-for="id" class="text-danger"></span>
            </div>
            <div hidden class="form-group">
                <label asp-for="auth" class="control-label"></label>
                <input asp-for="auth" class="form-control" />
                <span asp-validation-for="auth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="itemIDHolder" class="control-label">Enter Item ID:</label>
                <input asp-for="itemIDHolder" class="form-control" />
                <span asp-validation-for="itemIDHolder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="amountHolder" class="control-label">Enter Quantity</label>
                <input asp-for="amountHolder" class="form-control" />
                <span asp-validation-for="amountHolder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <button class="btn-light"><a href="javascript:void(0);" onclick="history.go(-1);">Back</a></button>
</div>

