@model ModelsDefault.User

@{
    ViewData["Title"] = "StoreSearch";
}

<h1>Search A store By Name</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="StoreSearch">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="findStore" class="control-label">Query:</label>
                <input asp-for="findStore" class="form-control" />
                <span asp-validation-for="findStore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <button class="btn-light"><a href="javascript:void(0);" onclick="history.go(-1);">Back</a></button>
</div>

