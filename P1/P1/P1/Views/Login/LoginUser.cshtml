@model ModelsDefault.User

@{
    ViewData["Title"] = "LoginUser";
}

<h1>Login With User ID</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="LoginUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            
            <div class="form-group">
                <label asp-for="id" class="control-label">ID: </label>
                <input asp-for="id" class="form-control" />
                <span asp-validation-for="id" class="text-danger"></span>
            </div>
            
            
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <button class="btn-light"><a asp-area="" asp-controller="Home" asp-action="Index">Back to Home</a></button>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
